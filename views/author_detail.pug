extend layout 

block content
    h1 Author: #{author.name}
    if author.lifespan
        p #{author.date_of_birth_formatted} - #{author.date_of_death_formatted}, (#{author.lifespan} years) 
    else 
        p #{author.date_of_birth_formatted} - #{author.date_of_death_formatted}
    div(style='margin-left:20px;margin-top:20px')
        h2(style='font-size:1.5rem;') Books 
        if author_books.length 
            dl 
                each book in author_books
                    dt
                        a(href=book.url) #{book.title}
                    dd #{book.summary}
        else
            p There are no books by this author.

    hr
    p 
        a(href=author.url+'/delete') Delete Author
    p 
        a(href=author.url+'/update') Update Author